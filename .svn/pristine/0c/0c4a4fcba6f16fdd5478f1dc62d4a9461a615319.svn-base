router.beforeEach((to, from, next) => {
  if (to.name === 'home') {
    next()
  } else {
    login().then(res => {
      if (res.status === 200) {
        if (res.data === true) {
          next()
        } else {
          if (location.href === 'http://www.beidakeji.com:8083/page/login') {
            next()
          } else if (to.name === 'home') {
            next()
          } else {
            location.href = 'http://www.beidakeji.com:8083/page/login'
          }
        }
      }
    })
  }
})

export default router
